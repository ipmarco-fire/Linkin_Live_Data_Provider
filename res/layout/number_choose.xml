<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_ok_bg02"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutFocus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/num_input_selector"
            android:focusable="true"
            android:nextFocusDown="@+id/listView"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="25dp"
                android:paddingTop="1dp"
                android:textColor="#f4c900"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="1dp"
                android:singleLine="true"
                android:textColor="#f4c900"
                android:textSize="28sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="505dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="-5dp"
            android:fadingEdge="none"
            android:layout_marginTop="20dp"
            android:listSelector="@drawable/ok_item_selector" >
        </ListView>
    </LinearLayout>

</LinearLayout>